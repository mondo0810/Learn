@model ASPMVC.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Department</h1>
    <h3 class="text-warning">Are you sure you want to delete this department?</h3>

    <div class="card mt-4">
        <div class="card-header">
            <h4>Department Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DepartmentName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DepartmentName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DepartmentCode)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DepartmentCode)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Location)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Location)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NumberOfPersonals)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NumberOfPersonals)
                </dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="DepartmentId" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </form>
        </div>
    </div>
</div>
