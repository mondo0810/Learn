@model exam.Models.Department

<h1 class="header-thumnail"> Create Department</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <div class="col-md-10">
            <input asp-for="Name" />
        </div>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartmentCode"></label>
        <div class="col-md-10">
            <input asp-for="DepartmentCode" />
        </div>
        <span asp-validation-for="DepartmentCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location"></label>
        <div class="col-md-10">
            <input asp-for="Location" />
        </div>
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" />
    </div>
</form>